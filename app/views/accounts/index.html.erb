<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Login</th>
      <th>Password</th>
      <th>Initial date</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.title %></td>
        <td><%= account.login %></td>
        <td><%= account.password %></td>
        <td><%= account.initial_date.strftime('%d/%m/%Y') %></td>
        <td><%= account_status(account.status) %></td>
        <td>
        <%= link_to account do %>
          <i class="btn">o</i>
        <% end %>
        <%= link_to edit_account_path(account) do %>
          <i class="btn">i</i>
        <% end %>
        <%= link_to account, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="btn">x</i>
        <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path, :class => "btn" %>
